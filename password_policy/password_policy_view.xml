<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>


		<record id="view_password_policy_configuration" model="ir.ui.view">
			<field name="name">Password Policy</field>
			<field name="model">res.config.password_policy</field>
			<field name="arch" type="xml">
				<form string="Password Policy" class="oe_form_configuration">
					<header>
						<button string="Apply" type="object" name="execute" class="oe_highlight" />
						or
						<button string="Cancel" type="object" name="cancel" class="oe_link" />
					</header>
					<separator string="Password Policy" />

					<group>
						<field name="minimum_password_length" />
						<field name="check_upper_and_lower" />
						<field name="check_contains_number" />
						<field name="check_only_numbers" />
						<field name="minimum_special_characters" />
						<field name="special_characters" />
						<field name="check_names_in_password" />
						<field name="password_expire_interval" />
						<field name="password_reset_duration" />
						<field name="password_reminder_days" />
					</group>
				</form>
			</field>
		</record>

		<record id="action_password_policy_configuration" model="ir.actions.act_window">
			<field name="name">Password Policy</field>
			<field name="res_model">res.config.password_policy</field>
			<field name="view_mode">form</field>
			<field name="target">inline</field>
		</record>

		<menuitem id="password_policy" parent="base.menu_users"
			sequence="100" action="action_password_policy_configuration" />


		<record id="view_password_policy_schedule_tree" model="ir.ui.view">
			<field name="name">view.res.config.password_policy.scheduler.tree
			</field>
			<field name="model">res.config.password_policy.sheduler</field>
			<field name="arch" type="xml">
				<tree string="Password Policy Scheduler" create="false">
					<field name="user_id" />
					<field name="last_password_change" />
					<field name="password_expiry_date" />
					<field name="password_reminder_date" />
					<field name="login_blocked" />
					<field name="reminder_send" />
				</tree>
			</field>
		</record>
		
		<record id="view_password_policy_schedule_form" model="ir.ui.view">
			<field name="name">view.res.config.password_policy.scheduler.form
			</field>
			<field name="model">res.config.password_policy.sheduler</field>
			<field name="arch" type="xml">
				<form string="Password Policy Scheduler" create="false">
					<group>
						<field name="user_id" />
						<field name="last_password_change" />
						<field name="password_expiry_date" />
						<field name="password_reminder_date" />
						<field name="login_blocked" />
						<field name="reminder_send" />
					</group>
				</form>
			</field>
		</record>
		

		<record id="action_password_policy_schedule" model="ir.actions.act_window">
			<field name="name">Password Policy Schedule</field>
			<field name="res_model">res.config.password_policy.sheduler</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="password_policy_schedule_side_menu_action"
			parent="base.menu_users" sequence="100" action="action_password_policy_schedule" />

		<record id="view_users_form_inherit" model="ir.ui.view">
			<field name="name">res.users.form.inherit</field>
			<field name="model">res.users</field>
			<field name="inherit_id" ref="base.view_users_form" />
			<field name="arch" type="xml">
				<xpath expr="//group[@name='preferences']" position="after">
					<group string="Password Options" name="password">
						<field name="password_never_expires" />
					</group>
				</xpath>
			</field>
		</record>		

	</data>
</openerp>